= render partial: 'partials/cover_search'
= render partial: 'partials/search_bar'

%p#notice= notice

- @events.in_groups_of(3).each do |event_group|
  .row.spacing-top
    - event_group.each do |event|
      -if event
        .col-md-2.col-md-offset-2.band-summary
          = link_to "#{image_tag('band-cover.jpg')}".html_safe, event
          .col-md-12
            %h3 #{ event.name }
            %h5 #{ event.description }
            %hr
            .center
              .glyphicon.glyphicon-star
              .glyphicon.glyphicon-star
              .glyphicon.glyphicon-star
              .glyphicon.glyphicon-star
              .glyphicon.glyphicon-star

/ %h1 Listing Events
/ %table
/   %thead
/     %tr
/       %th{colspan: '3'}
/   %tbody
/     - @events.each do |event|
/       %tr
/         %td= event.name
/         %td= link_to 'Show', event
